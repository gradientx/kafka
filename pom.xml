<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>kafka</groupId>
  <artifactId>kafka-core</artifactId>
  <version>0.8.0</version>
  <packaging>jar</packaging>

  <repositories>
    <repository>
      <id>gradientx-release-repo</id>
      <name>Gradient X Release Repository</name>
      <url>s3://codex.corp.gradientx.com/maven/release</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>gradientx-snapshot-repo</id>
      <name>Gradient X Snapshot Repository</name>
      <url>s3://codex.corp.gradientx.com/maven/snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  
  <pluginRepositories>
    <pluginRepository>
      <id>gradientx-release-repo</id>
      <name>Gradient X Release Repository</name>
      <url>s3://codex.corp.gradientx.com/maven/release</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>gradientx-snapshot-repo</id>
      <name>Gradient X Snapshot Repository</name>
      <url>s3://codex.corp.gradientx.com/maven/snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <name>kafka</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <build>
    <extensions>
      <extension>
        <groupId>org.springframework.build.aws</groupId>
        <artifactId>org.springframework.build.aws.maven</artifactId>
        <version>3.0.0.RELEASE</version>
      </extension>
    </extensions>
  </build>
  
  <distributionManagement>
    <repository>
      <id>gradientx-release-repo</id>
      <name>Gradient X Release Repository</name>
      <url>s3://codex.corp.gradientx.com/maven/release</url>
    </repository>
    <snapshotRepository>
      <id>gradientx-snapshot-repo</id>
      <name>Gradient X Snapshot Repository</name>
      <url>s3://codex.corp.gradientx.com/maven/snapshot</url>
    </snapshotRepository>
  </distributionManagement>

</project>

